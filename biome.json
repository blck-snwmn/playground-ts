{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"files": {
		"ignore": [
			"node_modules/**",
			"**/build/**",
			"**/coverage/**",
			"**/playwright/.cache/**",
			"**/playwright-component-test/playwright/.cache/**",
			"**/.cache/**",
			"**/dist/**"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
