{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(deps)",
    "helpers:pinGitHubActionDigests"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "blck-snwmn"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "patch updates",
      "automerge": false,
      "minimumReleaseAge": "3 days"
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "minor updates",
      "automerge": false,
      "minimumReleaseAge": "7 days"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "minimumReleaseAge": "14 days"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "devDependencies",
      "automerge": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": false
    },
    {
      "matchFileNames": [
        "**/package.json"
      ],
      "groupName": "{{{parentDir}}} dependencies",
      "commitMessageTopic": "{{{parentDir}}} dependencies"
    }
  ],
  "prConcurrentLimit": 10,
  "rebaseWhen": "behind-base-branch",
  "rangeStrategy": "bump",
  "ignorePaths": [
    "**/node_modules/**"
  ],
  "enabledManagers": [
    "npm",
    "github-actions"
  ],
  "baseBranchPatterns": [
    "main"
  ]
}
